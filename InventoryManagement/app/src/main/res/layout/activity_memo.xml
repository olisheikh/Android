<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bodyColor"
    tools:context=".view.MemoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/memoToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabColor"
        android:textSize="32sp"
        app:tabTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-black"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/headerMemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="#8BC34A"
        app:layout_constraintTop_toBottomOf="@id/memoToolBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/invoiceNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_weight=".5"
            android:text="Invoice"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/memoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="Date"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/customerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/headerMemo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/box_shape"
            android:hint="Customer's name"
            android:textColorHint="#746C6C"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/customerNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/box_shape"
            android:hint="Mobilbe Number"
            android:padding="10dp"
            android:textColorHint="#746C6C"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:inputType="number"/>
        <Button
            android:id="@+id/selectItem"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:text="Select Item"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customerSelectedItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/customerDetails"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/saveTotalBtn"/>
    <LinearLayout
        android:id="@+id/saveTotalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/customerSelectedItems"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/savePrintBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:layout_margin="5dp"
            android:text="Save and Print"
            android:textColor="@color/black"
            android:layout_weight=".5"/>
        <Button
            android:id="@+id/totalBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:layout_margin="5dp"
            android:text="Total"
            android:textColor="@color/black"
            android:layout_weight=".5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>